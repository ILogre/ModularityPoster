% \incfig{file}{width}{label}{caption}
\newcommand{\incfig}[4]{\begin{figure}[tb!]
	\begin{center}
		\includegraphics[width=#2\textwidth]{#1}
		\caption{#4}
		\label{figs:#3}
	\end{center}
